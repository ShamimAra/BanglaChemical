@using System.Data
@using System.Collections
@using Connection
@using BanglaChemical.Models
@using BanglaChemical.Models.UserManagement
@using BanglaChemical.Models.SetUp
@{        
    ViewBag.Title = "Customer";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <div class="main-content-inner">
        <div class="page-content">
            <div class="page-header">
                <h1>
                    Customer
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Customer Information
                    </small>
                </h1>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="form-horizontal" id="form_input" role="form">

                        <div class="form-group">
                            <input type="hidden" class="cust_id" id="cust_id" value="" />
                            <input type="hidden" class="cust_no" id="cust_no" value="" />

                            <label class="col-sm-3 control-label no-padding-right requiredicon" for="country_list">Country Name:</label>
                            <div class="col-sm-3">
                                <select name="country_list" id="country_list" class="col-xs-12 col-sm-12 country_list select_search">
                                    <option value=""> Select Country</option>
                                   
                                </select>
                            </div>
                            <label class="col-sm-3 control-label no-padding-right" for="org_list">Organization Name:</label>
                            <div class="col-sm-3">
                                <select name="org_list" id="org_list" class="col-xs-12 col-sm-12 org_list select_search">
                                    <option value=""> Select Organizaion</option>
                                    
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right requiredicon" for="cust_name">Name:</label>
                            <div class="col-sm-3">
                                <input type="text" name="cust_name" id="cust_name" class="col-xs-12 col-sm-12 cust_name" value="" placeholder="Example: Mr. David">
                            </div>
                            <label class="col-sm-3 control-label no-padding-right" for="cust_email">Email:</label>
                            <div class="col-sm-3">
                                <input type="email" name="cust_email" id="cust_email" class="col-xs-12 col-sm-12 cust_email" value="" placeholder="Example: abc@gmail.com">
                                <span id="error_email"></span>
                            </div>
                            
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right requiredicon" for="cust_mob">Mobile Number:</label>
                            <div class="col-sm-3">
                                <input type="text" name="cust_mob" id="cust_mob" class="col-xs-12 col-sm-12 cust_mob" value="" maxlength="11" placeholder="Example: 017XXXXXXXX" onkeypress="return isNumber(event)">
                            </div>
                            <label class="col-sm-3 control-label no-padding-right requiredicon" for="cust_address">Address:</label>
                            <div class="col-sm-3">
                                <input type="text" name="cust_address" id="cust_address" class="col-xs-12 col-sm-12 cust_address" value="" placeholder="Example: Baridhara DOHS">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="contact_person">Contact Person:</label>
                            <div class="col-sm-3">
                                <input type="text" name="contact_person" id="contact_person" class="col-xs-12 col-sm-12 contact_person" value="" placeholder="Example: Mr. Morgan">
                            </div>
                            <label class="col-sm-3 control-label no-padding-right" for="con_person_mob">Contact Person Mobile Number:</label>
                            <div class="col-sm-3">
                                <input type="text" name="con_person_mob" id="con_person_mob" class="col-xs-12 col-sm-12 con_person_mob" value="" maxlength="11" placeholder="Example: 018XXXXXXXXX" onkeypress="return isNumber(event)">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right requiredicon" for="bin_no"> BIN Number: </label>
                            <div class="col-sm-3">
                                <input type="text" name="bin_no" id="bin_no" class="col-xs-12 col-sm-12 bin_no" value="" onkeypress="return isNumber(event)" placeholder="Example: 2547XXXXXXXX">
                            </div>
                            <label class="col-sm-3 control-label no-padding-right requiredicon" for="tin_no"> TIN Number: </label>
                            <div class="col-sm-3">
                                <input type="text" name="tin_no" id="tin_no" class="col-xs-12 col-sm-12 tin_no" value="" onkeypress="return isNumber(event)" placeholder="Example: 8965XXXXXXXX">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right requiredicon" for="vat_no"> VAT Registration Number: </label>
                            <div class="col-sm-3">
                                <input type="text" name="vat_no" id="vat_no" class="col-xs-12 col-sm-12 vat_no" value="" onkeypress="return isNumber(event)" placeholder="Example: 4698XXXXXXXX">
                            </div>
                            <label class="col-sm-3 control-label no-padding-right requiredicon" for="nid_no"> National ID: </label>
                            <div class="col-sm-3">
                                <input type="text" name="nid_no" id="nid_no" class="col-xs-12 col-sm-12 nid_no" value="" onkeypress="return isNumber(event)" placeholder="Example: 5552091160">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-3">
                                <button type="submit" class="btn btn-sm btn-success" id="saveCustomer"><i class="fa fa-check-square-o"></i> Save</button>
                            </div>
                        </div>


                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12">
                    <div class="table-responsive">
                        <table id="table_data" class="table table-bordered table-striped table-condensed table-hover data_table">
                            <thead>
                                <tr>
                                    <th class="hidden"></th>
                                    <th class="hidden"></th>
                                    <th>Country Name</th>
                                    <th class="hidden"></th>
                                    <th>Organization Name</th>
                                    <th>Customer Name</th>
                                    <th>Email</th>
                                    <th>Mobile Number</th>
                                    <th>Address</th>
                                    <th>Contact Person</th>
                                    <th>Contact Person Mobile Number</th>
                                    <th class="hidden">Customer Number</th>
                                    <th>BIN Number</th>
                                    <th>TIN Number</th>
                                    <th>VAT Registration Number</th>
                                    <th>National ID</th>
                                    <th class="hidden"></th>
                                    <th class="hidden"></th>
                                    <th style="text-align: center; border: 1px solid #ddd;" id="action">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="edit_form" class="modal edit_form" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="width:915px;">
            <div class="modal-header">
                <h4 class="blue bigger">
                    Customer
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i>
                        Customer Edit
                    </small>
                </h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-12">

                        <div class="form-horizontal" id="form_input" role="form">
                            <input type="hidden" class="cust_id" id="cust_id" value="" />
                            <input type="hidden" class="cust_no" id="cust_no" value="" />

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right requiredicon" for="edit_country_list">Country Name:</label>
                                <div class="col-sm-3">
                                    <select name="edit_country_list" id="edit_country_list" class="col-xs-12 col-sm-12 edit_country_list select_search">
                                        <option value=""> Select Country</option>
                                       
                                    </select>
                                </div>
                                <label class="col-sm-3 control-label no-padding-right" for="edit_org_list">Organization Name:</label>
                                <div class="col-sm-3">
                                    <select name="edit_org_list" id="edit_org_list" class="col-xs-12 col-sm-12 edit_org_list select_search">
                                        <option value=""> Select Organizaion</option>
                                        
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right requiredicon" for="edit_cust_name">Name:</label>
                                <div class="col-sm-3">
                                    <input type="text" name="edit_cust_name" id="edit_cust_name" class="col-xs-12 col-sm-12 edit_cust_name" value="" placeholder="Example: Mr. David">
                                </div>
                                <label class="col-sm-3 control-label no-padding-right" for="edit_cust_email">Email:</label>
                                <div class="col-sm-3">
                                    <input type="email" name="edit_cust_email" id="edit_cust_email" class="col-xs-12 col-sm-12 edit_cust_email" value="" placeholder="Example: abc@gmail.com">
                                    <span id="error_edit_email"></span>
                                </div>
                                
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right requiredicon" for="edit_cust_mob">Mobile Number:</label>
                                <div class="col-sm-3">
                                    <input type="text" name="edit_cust_mob" id="edit_cust_mob" class="col-xs-12 col-sm-12 edit_cust_mob" value="" maxlength="11" onkeypress="return isNumber(event)" placeholder="Example: 017XXXXXXXX">
                                </div>
                                <label class="col-sm-3 control-label no-padding-right requiredicon" for="edit_cust_address">Address:</label>
                                <div class="col-sm-3">
                                    <input type="text" name="edit_cust_address" id="edit_cust_address" class="col-xs-12 col-sm-12 edit_cust_address" value="" placeholder="Example: Baridhara DOHS">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right" for="edit_contact_person">Contact Person:</label>
                                <div class="col-sm-3">
                                    <input type="text" name="edit_contact_person" id="edit_contact_person" class="col-xs-12 col-sm-12 edit_contact_person" value="" placeholder="Example: Mr. Morgan">
                                </div>
                                <label class="col-sm-3 control-label no-padding-right" for="edit_con_person_mob">Contact Person Mobile Number:</label>
                                <div class="col-sm-3">
                                    <input type="text" name="edit_con_person_mob" id="edit_con_person_mob" class="col-xs-12 col-sm-12 edit_con_person_mob" value="" onkeypress="return isNumber(event)" maxlength="11" placeholder="Example: 018XXXXXXXXX">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right requiredicon" for="edit_bin_no"> BIN Number: </label>
                                <div class="col-sm-3">
                                    <input type="text" name="edit_bin_no" id="edit_bin_no" class="col-xs-12 col-sm-12 edit_bin_no" value="" onkeypress="return isNumber(event)" placeholder="Example: 2547XXXXXXXX">
                                </div>
                                <label class="col-sm-3 control-label no-padding-right requiredicon" for="edit_tin_no"> TIN Number: </label>
                                <div class="col-sm-3">
                                    <input type="text" name="edit_tin_no" id="edit_tin_no" class="col-xs-12 col-sm-12 edit_tin_no" value="" onkeypress="return isNumber(event)" placeholder="Example: 8965XXXXXXXX">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-3 control-label no-padding-right requiredicon" for="edit_vat_no"> VAT Registration Number: </label>
                                <div class="col-sm-3">
                                    <input type="text" name="edit_vat_no" id="edit_vat_no" class="col-xs-12 col-sm-12 edit_vat_no" value="" onkeypress="return isNumber(event)" placeholder="Example: 4698XXXXXXXX">
                                </div>
                                <label class="col-sm-3 control-label no-padding-right requiredicon" for="edit_nid_no"> National ID: </label>
                                <div class="col-sm-3">
                                    <input type="text" name="edit_nid_no" id="edit_nid_no" class="col-xs-12 col-sm-12 edit_nid_no" value="" onkeypress="return isNumber(event)" placeholder="Example: 5552091160">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-9 col-sm-offset-3">
                                    <input type="hidden" id="editing_row" />
                                    <div class="space-4"></div>

                                    <button class="btn btn-sm btn-danger" data-dismiss="modal">
                                        <i class="ace-icon fa fa-times"></i> Cancel
                                    </button>

                                    <button class="btn btn-sm btn-primary" id="updateCustomer">
                                        <i class="ace-icon fa fa-check"></i> Update
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>